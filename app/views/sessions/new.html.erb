<% content_for(:title, t('.title')) %>
<div class="pot d-flex justify-content-center align-items-center" style="height: 80vh;">
  <div class="card-info" style="width: 400px;">
    <div class="card-header">
      <%= t('defaults.login')%>
    </div>
    <div class="card-body-up">
      <%= form_with url: login_path, method: :post do |f| %>
        <div class="mb-3">
          <%= f.label :email, t('.email') %>
          <%= f.email_field :email, class: 'form-control', placeholder:'メールアドレス' %>
        </div>

        <div class="mb-3">
          <%= f.label :password, t('.password') %>
          <%= f.password_field :password, class: 'form-control', placeholder:'パスワード', id: "show_password" %>
        </div>
        <div class="mb-3">
          <%= f.submit t('defaults.login'), class: 'btn btn-primary' %>
        </div>
      <% end %>
       <% if session[:guest_user_id].nil? %>
        <div class="mb-3">
         <%= link_to t('.guest_login'), guest_login_path, method: :post, class: 'btn btn-success' %>
        </div>
       <% end %>
      <%= link_to t('.password_forget'), new_password_reset_path %>
      <div id="line-button">
       <%= link_to 'LINEでログイン', auth_at_provider_path(provider: :line), class: "line-login-button" %>
      </div>
    </div>
  </div>
</div>
