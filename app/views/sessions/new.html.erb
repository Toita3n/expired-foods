<% content_for(:title, t('.title')) %>
<div class="pot d-flex justify-content-center align-items-center">
  <div class="card-info">
    <div class="card-header">
      <%= t('defaults.login')%>
    </div>
    <div class="card-content">
      <%= form_with url: login_path, method: :post do |f| %>
        <div class="mb-3 required-field">
          <%= f.label :email, t('.email') %>
          <%= f.email_field :email, class: 'form-control', placeholder:'メールアドレス' %>
        </div>
        <div class="mb-3 required-field">
          <%= f.label :password, t('.password') %>
          <%= f.password_field :password, class: 'form-control', placeholder:'パスワード', id: "show_password" %>
        </div>
        <div class="button-center">
          <%= f.submit t('defaults.login'), class: 'btn-login' %>
      <% end %>
        </div>
        <div class="button-center">
          <% if session[:guest_user_id].nil? %>
            <%= link_to t('.guest_login'), guest_login_path, method: :post, class: 'btn-guest' %>
          <% end %>
        </div>
        <div class="button-center">
          <div id="line-button">
            <%= link_to t('.line_login'), auth_at_provider_path(provider: :line), class: "line-login-button" %>
          </div>
        </div>
        <div class="text-center">
          <%= link_to t('.password_forget'), new_password_reset_path %>
        </div>
    </div>
  </div>
</div>
