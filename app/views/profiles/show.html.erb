<% content_for(:title, current_user.name) %>
<div class="content pt-3">
  <div class="row">
    <div class="col-md-10 offset-md-1 mb-5">
      <h1 class="float-card"><%= t('.title')%></h1>
    </div>
    <div class="col-md-10 offset-md-1">
      <table class="table">
        <tbody>
          <tr>
            <th>
              <span><%= t('.email')%></span>
            </th>
            <td>
              <% if current_user.email == 'guestuser@example.com' %></td>
              <span><%= t('.cannot_change_email')%></span>
            <% else %>
              <span><%= current_user.email %></span>
            <% end %>
            <td><%=link_to t('.change_profile'), edit_profile_path, class: 'btn btn-primary float-right' %></td>
          </tr>
          <tr>
            <th>
              <span><%= t('.line_account') %></span>
            </th>
           <% if current_user.email == 'guestuser@example.com' %>
            <td><%= t('.cannot_change_email') %></td>
           <% else %>
            <td>
              <% if current_user.uid.present? %>
               <span><%=t('.connected_LINE') %></span>
               <td><span>&nbsp;</span></td>
              <% else %>
               <span><%= t('.unlinked_LINE')%></span>
               <td><%= link_to t('.linked_LINE'), auth_at_provider_path(provider: :line), class: 'btn btn-primary float-right' %>
              <% end %>
            </td>
           <% end %>
          </tr>
          <tr>
           <th>
            <span><%= t('.destroy_user')%></span>
           </th>
            <td><span>&nbsp;</span></td>
            <td>
             <%= link_to t('.destroy'), user_path(current_user), id: "button-delete-#{current_user.id}", method: :delete, class: "btn btn-danger float-right", data: { confirm: t('defaults.message.deleted_confirm') } %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>