<div class="container pt-3">
  <div class="row">
    <div class="col-md-10 offset-md-1 mb-5">
      <h1 class="float-left">ユーザー詳細</h1>
    </div>
    <div class="col-md-10 offset-md-1">
      <table class="table">
        <tbody>
          <tr>
            <th>
              <span>メールアドレス</span>
            </th>
            <td><%= current_user.email %>
            <%=link_to "メールアドレスの編集", edit_user_path(current_user), class: 'btn btn-success float-right' %></td>
          </tr>
          <tr>
            <th>
              <span>パスワード</span>
            </th>
            <td><%= current_user.password %></td>
          </tr>
           <tr>
            <th>
              <span>LINEアカウント</span>
            </th>
            <td>#
            <%= link_to "LINEアカウントの紐付け変更", "#", class: 'btn btn-primary float-right'%></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>