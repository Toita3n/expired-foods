<div class="content">
  <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2">
   <div class="row">
     <p>お問い合わせフォーム</p>
     <%= form_with model: @inquiry, local: true do |f| %>
       <%= f.email_field :email, class: "form-control", placeholder: "メールアドレス" %>
       <%= f.text_area :text, class: "form-control", placeholder: "本文", size: "20x20" %>
       <%= f.submit '送信', class: "btn btn-primary" %>
     <% end %>
    </div>
  </div>
</div>
   