 <div class="container pt-5">
  <div class="row mb-3">
    <div class="col-lg-8 offset-lg-2">
      <article class="box1">
        <div class="card-body">
         <div class='row'>
           <div class='col-md-3'>
             <% if @item.image.attached? %>
               <%= image_tag @item.image, size: '300x200' %>
             <% else %>
               <%= image_tag("default.jpg", size: '300x200') %>
             <% end %>
           </div>
           <div class='col-md-12'>
             <h3 class="d-inline"><%= @item.title %></h3>
                <%= render 'items/crud_menus', item: @item %>
             <ul class="list-inline">
                 <li class="list-inline-item">総数<%= @item.count %>個</li>
                 <li class="list-inline-item">賞味期限:<%= @item.expired_at.strftime('%Y-%m-%d')  %></li>
                 <li class="list-inline-item"><%= @item.remaining_days %></li>
                 <li class="list-inline-item">
                   <% @item.tags.each do |tag| %>
                    <%= link_to tag.name, tag_path(tag), class: 'badge rounded-pill bg-info text-decoration-none text-dark' %>
                   <% end %>
                 </li>
             </ul>
           </div>
         </div>
        </div>
      </article>
    </div>
  </div>
 </div>
</section>