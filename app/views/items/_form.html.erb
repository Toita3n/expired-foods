<%= form_with model: item, local: true do |f| %>
  <div class="mb-3">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :count %>
    <%= f.number_field :count, size: '5x5', min: 0 %>
  </div>
  <div class="mb-3">
    <%= f.label :expired_at %>
    <%= f.date_field :expired_at %>
  </div>
  <div class="mb-3">
    <%= f.label :image %>
    <%= f.file_field :image %>
  </div>
  <div class="field">
    <%= f.label :tag_name %>
    <%= f.text_field :tag_name, value: @tag_list, class:"form-control" %>
  </div>
  <div class="textarea">
    <%= f.label :detail %>
    <%= f.text_field :detail, class: "form-control" %>
  </div>
  <%= f.submit t('defaults.register'), class: 'btn btn-primary'  %>
<% end %>
