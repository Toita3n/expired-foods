<%= form_with model: item, local: true do |f| %>
  <div class="mb-3">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :count, '総数' %>
    <%= f.number_field :count, size: '5x5', min: 0 %>
  </div>
  <div class="mb-3">
    <%= f.label :expired_at, '賞味期限' %>
    <%= f.date_field :expired_at %>
  </div>
  <div class="mb-3">
    <%= f.label :image %>
    <%= f.file_field :image %>
  </div>
  <div class="field">
    <%= f.label :name, "タグ (空白で区切ると複数タグ登録できます)" %>
    <%= f.text_field :name, value: @tag_list, class:"form-control" %>
  </div>
  <%= f.submit '商品登録', class: 'btn btn-primary'  %>
<% end %>
