<%= form_with model: @shopping_list, url: shopping_lists_path, local: true do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <table>
    <tr>
      <th>
        <%= f.label :product, '商品名'%><span class="required-icon"></span>
      </th>
      <th>
        <%= f.label :number, '総数'%><span class="required-icon"></span>
      </th>
      <th>
        <%= f.label :trait, 'メモ' %>
      </th>
    </tr>
    <tbody>
      <%= f.fields_for :shopping_lists do |f| %>
        <tr>
          <td>
            <%= f.text_field :product %>
          </td>
          <td>
            <%= f.number_field :number, min: 1 %>
          </td>
          <td>
            <%= f.text_field :trait %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="shoppinglist-button">
    <%= f.submit t('defaults.register_item'), class: 'btn btn-primary' %>
  </div>
<% end %>