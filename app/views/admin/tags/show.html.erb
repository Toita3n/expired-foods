<% content_for(:title, t('.title')) %>
<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2">
      <h1><%= t('.title') %></h1>
      <div class="text-right mb-3">
        <%= link_to t('defaults.edit'), edit_admin_tag_path(@tag), class: 'btn btn-success' %>
        <%= link_to t('defaults.delete'), admin_tag_path(@tag), method: :delete, data: { confirm: t('defaults.message.deleted_comfirm') }, class: 'btn btn-danger' %>
      </div>
      <table class="table table-bordered bg-white">
        <tr>
          <th scope="row"><%= Tag.human_attribute_name(:id) %></th>
          <td><%= @tag.id %></td>
        </tr>
        <tr>
          <th scope="row"><%= Tag.human_attribute_name(:name) %></th>
          <td><%= @tag.name %></td>
        </tr>
        <tr>
          <th scope="row"><%= Tag.human_attribute_name(:item) %></th>
          <td> <% @tag.items.each do |tag| %>
                <%= tag.title %>
               <% end %></td>
        </tr>
        <tr>
          <th scope="row"><%= Tag.human_attribute_name(:created_at) %></th>
          <td><%= l @tag.created_at, format: :long %></td>
        </tr>
      </table>
    </div>
  </div>
</div>