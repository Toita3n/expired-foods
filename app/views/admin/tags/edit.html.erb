<% content_for(:name, @tag.name) %>
<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2">
      <h1><%= t('.title')%></h1>
     <%= form_with model: @tag, url: admin_tag_path(@tag), local: true do |f| %>
      <div class="field">
       <%= f.label :name %>
       <%= f.text_field :name, class: "form-control" %>
    </div>
       <%= f.submit 'タグを更新', class: 'btn btn-primary'  %>
     <% end %>
    </div>
  </div>
</div>